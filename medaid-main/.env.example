# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=medaid-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=medaid-project
REACT_APP_FIREBASE_STORAGE_BUCKET=medaid-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# AI Service Configuration
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_OPENAI_MODEL=gpt-3.5-turbo
REACT_APP_AI_RATE_LIMIT=10

# Google Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# SMS Service (for SOS functionality)
REACT_APP_SMS_PROVIDER=twilio
REACT_APP_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
REACT_APP_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
REACT_APP_TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Analytics and Monitoring
REACT_APP_ANALYTICS_ID=your_analytics_id_here
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# App Configuration
REACT_APP_APP_VERSION=0.1.0
REACT_APP_ENVIRONMENT=development
REACT_APP_API_BASE_URL=https://api.medaid.app
REACT_APP_CDN_BASE_URL=https://cdn.medaid.app

# Feature Flags
REACT_APP_ENABLE_VOICE_INPUT=true
REACT_APP_ENABLE_OFFLINE_TRANSLATION=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_BETA_FEATURES=false

# Performance Monitoring
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_BUNDLE_SIZE_LIMIT=204800

# Localization
REACT_APP_DEFAULT_LANGUAGE=hi
REACT_APP_FALLBACK_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=hi,en,te,kn,ml,ta

# Security
REACT_APP_CSP_NONCE=auto-generated-nonce
REACT_APP_ENABLE_HTTPS_ONLY=true

# Development Tools (only for development)
REACT_APP_SHOW_DEBUG_INFO=false
REACT_APP_MOCK_API_RESPONSES=false
REACT_APP_DISABLE_RATE_LIMITING=false